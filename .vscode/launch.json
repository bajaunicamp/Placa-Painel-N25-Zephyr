    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceFolder}",
            "name": "Debug with ST-Link",
            "gdbPath": "${command:zephyr-ide.get-toolchain-path}/arm-zephyr-eabi/arm-zephyr-eabi-gdb",
            "executable": "${command:zephyr-ide.get-active-build-path}/zephyr/zephyr.elf",
            "request": "launch",
            "type": "cortex-debug",
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "servertype": "stlink"
        },
    ]
}